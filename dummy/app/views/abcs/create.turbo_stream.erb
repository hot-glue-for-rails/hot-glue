<% if @abc.errors.none? %>
  <%= turbo_stream.replace "abcs-list" + "" do %>
  <%= render partial: "list", locals: {abcs: @abcs} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "abc-new" do %>
  <% if @abc.errors.none? %>
  <%= render partial: "new_button", locals: {} %>
  <% else %>
  <%= render partial: "new_form", locals: {abc: @abc} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @abc.errors.any? %>
  <%= render partial: "errors", locals: {resource: @abc} %>
  <% end %>
<% end %>
