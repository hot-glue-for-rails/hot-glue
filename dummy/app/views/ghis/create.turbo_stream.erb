<% if @ghi.errors.none? %>
  <%= turbo_stream.replace "ghis-list" + "" do %>
  <%= render partial: "list", locals: {ghis: @ghis} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "ghi-new" do %>
  <% if @ghi.errors.none? %>
  <%= render partial: "new_button", locals: {} %>
  <% else %>
  <%= render partial: "new_form", locals: {ghi: @ghi} %>
  <% end %>
  <% end %>
  <%= turbo_stream.replace "flash_notices" do %>
  <%= render partial: "layouts/flash_notices" %>
  <% if @ghi.errors.any? %>
  <%= render partial: "errors", locals: {resource: @ghi} %>
  <% end %>
<% end %>
